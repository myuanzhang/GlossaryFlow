# API Keys - 请替换为您自己的 API Keys
# 至少需要配置一个 Provider

# OpenAI Provider
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=["gpt-4", "gpt-3.5-turbo"]

# Ollama Provider (本地模型，无需 API Key)
OLLAMA_BASE_URL=http://localhost:11434
# 推荐: llama3:8b (最佳质量), deepseek-r1:7b (推理能力强)
# 注意: hunyuan:7b 需要重试，效率低，不推荐使用
OLLAMA_MODELS=["llama3:8b", "deepseek-r1:7b"]
# 使用 'ollama list' 查看已安装的模型

# Mimo Provider
MIMO_API_KEY=your_mimo_api_key_here
MIMO_BASE_URL=https://api.xiaomimimo.com/v1
MIMO_MODEL_NAME=["mimo-v2-flash", "mimo-v2"]

# DeepSeek Provider
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL_NAME=["deepseek-chat", "deepseek-reasoner"]

# Qwen Provider (通义千问)
QWEN_API_KEY=your_qwen_api_key_here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL_NAME=["qwen-mt-flash", "qwen3-max-preview"]

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Cache Configuration
CACHE_TTL=3600

# Glossary Configuration (可选)
# DEFAULT_GLOSSARY_PATH=data/glossary.json

# Provider Selection (默认使用哪个 Provider)
PROVIDER=openai
